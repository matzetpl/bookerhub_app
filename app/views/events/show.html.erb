
<section class="-2 section">

      <div class="container">
        <div class="row">
            <div class="col-12 pb-5">
                <h1><%= @event.name %></h1>
            </div>

        </div>
          <div class="row">
            <div class="col-sm-12 col-md-3 order-lg-1  mb-4">
              <div class="img-wrap text-left "  >
                <% if @event.image.attached? %>
                  <div class="img">
                      <%= image_tag @event.image, class: "img-fluid", style: "width: auto;" %>
                  </div>
                <% end %>
              </div>

              <div class="mt-3">
                <ul class="list-unstyled m-4">
                  <li><a href="#tickets">BILETY</a></li>
                  <li><a href="#description">O WYDARZENIU</a></li>
                  <li><a href="#locations">LOKALIZACJE</a></li>
                </ul>

              </div>
            </div>

            <div class="col-sm-12 col-md-9 order-lg-2 " >
              <div class="px-3">
                <h2 class="mb-4" id="tickets">BILETY</h2>


                <div class="m-4 mb-5">
                  <% @event.event_locations.each do |event_location|%>
                    <div class="mb-5">
                      <h5> <%= event_location.name %></h5>

                      <% event_location.ticket_pools.each do |pool| %>
                        <div class="col-12 p-3 border mb-3">
                          <%= pool.name.upcase %> -> (<%= pool.ticket_date_from %> - <%= pool.ticket_date_to %>)
                          <% if pool.buyable? %>
                              <button> KUP BILET </button>
                          <% end %>
                        </div>
                      <% end %>



                    </div>
                  <% end %>
                </div>

                <h2 class="mb-4" id="description">O WYDARZENIU</h2>
                <div class="mb-4">
                  <%= @event.description.html_safe  %>
                </div>

                <h2 class="mb-4" id="locations">LOKALIZACJE</h2>

                <div class="d-flex flex-row">
                <% @event.event_locations.each do |event_location|%>
                  <div >
                    <%= event_location.name %>
                  </div>
                <% end %>
                </div>

                
              </div>
            </div>

    
        </div>
      </div>
    </section>