version: '3.8'

services:
  elasticsearch:
    image: docker.elastic.co/elasticsearch/elasticsearch:8.17.0
    container_name: es02
    environment:
      - discovery.type=single-node
      - bootstrap.memory_lock=true
      - ES_JAVA_OPTS=-Xms2g -Xmx2g  # JVM Heap Size (2GB)
      - xpack.security.enabled=false  # Disable security features for testing

    ports:
      - "9200:9200"    # HTTP Port
      - "9300:9300"    # Transport port for cluster communication
    volumes:
      - es_data:/usr/share/elasticsearch/data  # Persistent data storage
    ulimits:
      memlock:
        soft: -1
        hard: -1  # Allow unlimited memory locking for Elasticsearch
    networks:
      - elastic
    mem_limit: 4g  # Increase memory limit to 4GB
    restart: always  # Always restart the container on failure or restart of Docker daemon

networks:
  elastic:
    driver: bridge  # Create a bridge network for communication

volumes:
  es_data:
    driver: local  # Ensure Elasticsearch data is persisted on the host machine
